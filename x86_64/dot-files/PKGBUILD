pkgname=dot-files
pkgver=1.1.3
pkgrel=1
pkgdesc="My Personal Dot-Files"
arch=('any')
source=('git+https://github.com/jens-buehnen/dot-files.git')
sha256sums=('SKIP')
depends=('fish' 'ghostty' 'niri' 'eza' 'neovim' 'stasis' 'fuzzel' 'fastfetch' 'chameleos' 'fd' 'hyfetch' 'zoxide' 'starship' 'fzf' 'mpv' 'yay' 'doas' 'waybar' 'wlsunset' 'brightnessctl' 'cliphist' 'wl-clipboard' 'yazi' 'neovide' 'niri-screen-time' 'steam' 'mate-polkit' 'swaylock' 'wlogout')
package() {
  mkdir -p "${pkgdir}/usr/share/dot-files"
  mkdir "${pkgdir}/usr/bin"
  install -D -m755 ../link-dot-files "${pkgdir}/usr/bin"
  cp -r ../src/dot-files/* "${pkgdir}/usr/share/dot-files"
}
